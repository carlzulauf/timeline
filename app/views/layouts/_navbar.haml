%nav.primary-nav
  .container-fluid
    .navbar-header
      %a.navbar-brand{href: root_path}
        - if current_user.present?
          = "Timeline: #{current_user.key}"
        - else
          = "Timeline"
    .primary-nav-right
      - if logged_in?
        = link_to "Log Out", logout_path, class: "btn btn-danger"
      - else
        %a.twitter-sign-in{href: "/auth/twitter"}= image_tag "twitter-sign-in.png"
